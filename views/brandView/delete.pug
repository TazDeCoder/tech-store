extends ../layout

block content
  h1= title

  if brandItems.length
    p #[strong Delete the following items before attempting to delete this brand]

    div(class='ml-2 mt-2')
      h4 Items

      dl
      each item in brandItems
        dt
          a(href=item.url) #{item.name}
        dd #{item.description}
  else
    p Do you really want to delete this Brand?

    form(method='POST' action='')
      div(class='my-3')
        label.form-label(class='invisible' for='brandid') Brand ID:
        input#brandid.form-control(type='hidden' name='brandid' value=brand._id required='true')

      button.btn.btn-primary(type='submit') Delete
