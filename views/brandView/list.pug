extends ../layout

block navItemsGroupOne
  +link('/browse/items', 'All items')
  +link('/browse/brands', 'All brands', true)
  +link('/browse/categories', 'All categories')

block content
  h1(class="fw-light") #{title} (#[strong #{brandCount}])

  ul(class="p-3")
    each brand in listBrands  
      li(class="m-3 list-unstyled fs-1 text-center")  
        a(href=brand.url) #{brand.name}
    else
      li There are no brands.
