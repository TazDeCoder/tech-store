extends ../layout

block navItems
  +link('/', 'Home')
  +link('/browse/items', 'All items')
  +link('/browse/brands', 'All brands')
  +link('/browse/categories', 'All categories')
  li(class='nav-item w-50 p-1')
    hr(class="text-white")
  +link('/browse/brand/create', 'Create new brand')
  +link('/browse/category/create', 'Create new category')
  +link('/browse/item/create', 'Create new item')

block content
  h1= title

  p #{brand.description}
  p #[strong Items:] #{brandItems.length}

  div(class='ml-1 mt-1') 
    h4 Items

    dl
      each item in brandItems
        dt 
          a(href=item.url) #{item.name}
        dd #{item.description}
      else
        p This brand has no items.

  hr

  p(class='mb-2')
    a(href=brand.url+'/delete') Delete brand
  
  p(class='pb-5')
    a(href=brand.url+'/update') Update brand
