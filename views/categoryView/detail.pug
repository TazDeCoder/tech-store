extends ../layout

block content
  h1= title

  div(style='ml-1 mt-1')
    h4 Items

    dl
      each item in categoryItems
        dt
          a(href=item.url) #{item.name}
        dd #{item.description}
      else
        p This category has no items.

  hr

  p(class='mb-2')
    a(href=category.url+'/delete') Delete Category
  
  p(class='pb-5')
    a(href=category.url+'/update') Update Category
