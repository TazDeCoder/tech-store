extends ../layout

block navItems
  +link('/', 'Home')
  +link('/browse/items', 'All items')
  +link('/browse/brands', 'All brands')
  +link('/browse/categories', 'All categories')
  li(class='nav-item w-50 p-1')
    hr(class="text-white")
  +link('/browse/brand/create', 'Create new brand')
  +link('/browse/category/create', 'Create new category')
  +link('/browse/item/create', 'Create new item')

block content
  h1= title

  div(style='ml-1 mt-1')
    h4 Items

    dl
      each item in categoryItems
        dt
          a(href=item.url) #{item.name}
        dd #{item.description}
      else
        p This category has no items.

  hr

  p(class='mb-2')
    a(href=category.url+'/delete') Delete Category
  
  p(class='pb-5')
    a(href=category.url+'/update') Update Category
